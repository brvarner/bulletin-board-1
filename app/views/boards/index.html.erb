<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="card">
        <div class="card-header d-flex align-items-center">
        <h1 class="h6">All boards</h1>
        <button class="ms-auto btn btn-sm btn-outline-success" type="button" data-bs-toggle="modal" data-bs-target="#newBoardModal">Add a new board</button>
        </div>
        <div class="list-group list-group-flush">
          <% @list_of_boards.each { |board| %>
                      <a href="/boards/<%= board.id %>" class="d-flex list-group-item list-group-item-action">
          <%= board.name %>
            <div class="ms-auto"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708"/>
              </svg>
            </div>
          </a>
          <% }%>
        </div>
      </div>
    </div>
  </div>
</div>
<!--Modal-->
<div id="newBoardModal" class="modal fade" tabindex="-1" aria-labelledby="newBoardModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="newBoardModalLabel">New board</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/insert_board" method="post">
          <div class="mb-3">
            <label for="name_box" class="form-label">Name</label>
            <input type="text" id="name_box" class="form-control" name="query_name">
          </div>
          <div class="d-grid"><button class="btn btn-success">Add board</button></div>
        </form>
      </div>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>
<hr>
